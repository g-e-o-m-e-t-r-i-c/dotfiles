	// coc-pairs
	"pairs.enableCharacters": [
		"(",
		"[",
		"{",
		"<",
		"'",
		"\"",
		"`",
		"'''", // docstrings in python
		"\"\"\""
	],

	// nerdfont icons for completion menu
	"suggest.completionItemKindLabels": {
		"method": "  ",
		"function": "  ",
		"variable": "[]",
		"field": "  ",
		"typeParameter": "<>",
